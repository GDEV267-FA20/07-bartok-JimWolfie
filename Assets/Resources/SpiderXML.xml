<xml>
	<!-- This file holds info for laying out the Prospector card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1" y="1" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets the depth layer so cards overlap properly -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->
	
	<!-- Layer0, the deepest cards. -->
	<slot id="0" x="-9" y="1" faceup="0" layer="0" hiddenby="10" />
	<slot id="1" x="-7"  y="1" faceup="0" layer="0" hiddenby="11"/>
	<slot id="2" x="-5"  y="1" faceup="0" layer="0" hiddenby="12" />
  <slot id="3" x="-3" y="1" faceup="0" layer="0" hiddenby="13" />
  <slot id="4" x="-1" y="1" faceup="0" layer="0" hiddenby="14" />
  <slot id="5" x="1" y="1" faceup="0" layer="0" hiddenby="15" />
  <slot id="6" x="3"  y="1" faceup="0" layer="0" hiddenby="16" />
  <slot id="7" x="5"  y="1" faceup="0" layer="0" hiddenby="17"/>
  <slot id="8" x="7"  y="1" faceup="0" layer="0" hiddenby="18" />
  <slot id="9"  x="9" y="1" faceup="0" layer="0" hiddenby="19" />
  
  
	<!-- Layer1, the next level. -->
  <slot id="10" x="-9" y="0" faceup="0" layer="1" hiddenby="20"/>
  <slot id="11" x="-7" y="0" faceup="0" layer="1" hiddenby="21" />
  <slot id="12" x="-5" y="0" faceup="0" layer="1" hiddenby="22" />
  <slot id="13" x="-3"  y="0" faceup="0" layer="1" hiddenby="23" />
  <slot id="14" x="-1"  y="0" faceup="0" layer="1" hiddenby="24" />
  <slot id="15" x="1"  y="0" faceup="0" layer="1" hiddenby="25" />
  <slot id="16" x="3"  y="0" faceup="0" layer="1" hiddenby="26" />
  <slot id="17" x="5"  y="0" faceup="0" layer="1" hiddenby="27" />
  <slot id="18" x="7" y="0" faceup="0" layer="1" hiddenby="28"/>
	<slot id="19" x="9" y="0" faceup="0" layer="1" hiddenby="29"/>
	

  <!-- Layer2, the next level. -->
 
  <slot id="20" x="-9" y="-1" faceup="0" layer="2" hiddenby="30" />
  <slot id="21" x="-7"  y="-1" faceup="0" layer="2" hiddenby="31"/>
  <slot id="22" x="-5"  y="-1" faceup="0" layer="2" hiddenby="32" />
  <slot id="23" x="-3" y="-1" faceup="0" layer="2" hiddenby="33" />
  <slot id="24" x="-1" y="-1" faceup="0" layer="2" hiddenby="34" />
  <slot id="25" x="1" y="-1" faceup="0" layer="2" hiddenby="35" />
  <slot id="26" x="3"  y="-1" faceup="0" layer="2" hiddenby="36" />
  <slot id="27" x="5"  y="-1" faceup="0" layer="2" hiddenby="37"/>
  <slot id="28" x="7"  y="-1" faceup="0" layer="2" hiddenby="38" />
  <slot id="29"  x="9" y="-1" faceup="0" layer="2" hiddenby="39" />




  <!-- Layer3, the top level. -->
  <slot id="30" x="-9" y="-2" faceup="0" layer="3" hiddenby="40" />
  <slot id="31" x="-7"  y="-2" faceup="0" layer="3" hiddenby="41"/>
  <slot id="32" x="-5"  y="-2" faceup="0" layer="3" hiddenby="42" />
  <slot id="33" x="-3" y="-2" faceup="0" layer="3" hiddenby="43" />
  <slot id="34" x="-1" y="-2" faceup="0" layer="3" hiddenby="44" />
  <slot id="35" x="1" y="-2" faceup="0" layer="3" hiddenby="45" />
  <slot id="36" x="3"  y="-2" faceup="0" layer="3" hiddenby="46" />
  <slot id="37" x="5"  y="-2" faceup="0" layer="3" hiddenby="47"/>
  <slot id="38" x="7"  y="-2" faceup="0" layer="3" hiddenby="48" />
  <slot id="39"  x="9" y="-2" faceup="0" layer="3" hiddenby="49" />
 
	
  <!--Layer4-->
  <slot id="40" x="-9" y="-3" faceup="0" layer="6" hiddenby="50" />
  <slot id="41" x="-7" y="-3" faceup="0" layer="6" hiddenby="51"/>
  <slot id="42" x="-5" y="-3" faceup="1" layer="6" />
  <slot id="43" x="-3" y="-3" faceup="1" layer="6" />
  <slot id="44" x="-1" y="-3" faceup="1" layer="6" />
  <slot id="45" x="1" y="-3"  faceup="1" layer="6" />
  <slot id="46" x="3" y="-3"  faceup="1" layer="6" />
  <slot id="47" x="5" y="-3"  faceup="1" layer="6" />
  <slot id="48" x="7" y="-3"  faceup="1" layer="6" />
  <slot id="49" x="9" y="-3"  faceup="1" layer="6" />
  
  <!--Layer5, the last 4 cards-->
  <slot id="50" x="-9" y="-4" faceup="1" layer="7"/>
  <slot id="51" x="-7" y="-4" faceup="1" layer="7"/>
  
	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="-6" y="5" xstagger="-0.015" layer="5"/>
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="0" y="1" layer="4"/>
  
  <!--This positions the spider trays-->
  <slot type="traypile" x="-10" y="9" xstagger="1.1" layer="8"/>
	
</xml>
	